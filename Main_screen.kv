ScreenOne:
    # user_name:user_name
    # todo_list:todo_list
    # date: date
    name: "main"
    SHOWTODO:
        Label:
            id:user_name
            markup: True
            text: "[b]Welcome[/b]"
            font_size: "30dp"
            pos: "5dp", "550dp"
            size: "200dp", "50dp"
            background_color: 0 ,0 , 0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            id:date
            markup: True
            text: root.datee
            font_size: "18dp"
            pos: "4dp", "532dp"
            size: "197dp", "30dp"
            background_color: 0 ,0 , 0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            
        Button:
            markup: True
            text: '[b]ADD TASK[/b]'
            font_size: "18dp"
            pos: "95dp", "10dp"
            size: "130dp", "33dp"
            background_color: 1 ,0 , .5, 1
            background_normal: "normal"
            background_down: "normal"
            on_release:
                root.manager.current = "screentwo"
                root.manager.transition.direction = "right"
                root.manager.transition = RiseInTransition()

        ScrollView:
            do_scroll_y: True
			do_scroll_x: False
            pos: "20dp", "53dp"
            size: "310dp", "450dp"
			bar_width: 3
            bar_color: 1 ,0 , .5, 1
            GridLayout:
                id:todo_list
				cols: 1
				height: self.minimum_height
				row_default_height: 80
				size_hint_y: None
				padding: (15, 10)
                # spacing: "0dp", "10dp"

